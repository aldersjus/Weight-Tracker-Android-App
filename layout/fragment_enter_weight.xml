<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/enterWeightCardView"
        android:padding="12dp"
        android:layout_margin="4dp"
        android:elevation="12dp"
        android:paddingBottom="20dp"
        android:contentDescription="@string/enterWeightContent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >

                <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numberPickerOne">

                </NumberPicker>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewEnterWeightTwo"
                    android:text="@string/dot"
                    android:contentDescription="@string/newWeight"
                    style="@style/EnterTextStyle"
                    android:layout_marginTop="70dp"
                    />
                <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numberPickerTwo">

                </NumberPicker>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewEnterWeightThree"
                    android:text="@string/kilogram"
                    android:contentDescription="@string/newWeight"
                    style="@style/EnterTextStyle"
                    android:layout_marginTop="70dp"
                    />


            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/newWeight"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#616161"
                android:layout_margin="20dp"
                android:layout_marginBottom="200dp"
                android:id="@+id/enterWeightButton"
                android:elevation="2dp"
                android:contentDescription="@string/buttonContent"
                android:focusable="true"
                />

                </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>