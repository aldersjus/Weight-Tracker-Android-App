<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="500dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:padding="12dp"
        android:layout_margin="4dp"
        android:elevation="12dp"
        android:paddingBottom="20dp"
        android:contentDescription="@string/welcomeContent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/selectMeasurement"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/welcomeRadioGroup"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightChoiceKg"
            android:textColor="@color/white"
            android:text="@string/kilogram"
            android:checked="true"
            android:textStyle="bold"
            android:buttonTint="@color/white"
          />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightChoiceLbs"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/lbs"
            android:buttonTint="@color/white"
            />

    </RadioGroup>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:id="@+id/welcomeButton"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:text="@string/letsGo"
        android:textStyle="bold"
        android:textSize="20dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>